<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <%- include('_layout/Resources.ejs') -%>
        <link rel='stylesheet' href='/css/Login.css'>
    </head>

    <body>
        <div class="container">
            <h2>Authenticate to Ansible Tower</h2>
            <br />

            <form method="post" action="/auth/login">
                <div class="form-group">
                    <label for="exampleInputEmail1">Tower Username</label>
                    <input type="text" class="form-control" id="towerUsername" name="towerUsername" placeholder="Enter Tower Usename">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Tower Password</label>
                    <input type="password" class="form-control" id="towerPassword" name="towerPassword" placeholder="Enter Tower Password">
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>
    </body>
</html>