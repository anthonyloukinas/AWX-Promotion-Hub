<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8">
    <%- include('_layout/Resources.ejs') -%>
    <link rel='stylesheet' href='/css/Main.css'>
    <title>AWX Promotion Hub - Job Templates</title>
  </head>

  <body>
    <%- include('_layout/Navigation.ejs') -%>
    <div class="container mt-4" id="main-container">

      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item active"><a href="/">Dashboard</a></li>
        </ol>
      </nav>

      <h3>Job Templates</h3>
      <br />

      <div class="table-responsive">

        <table class="table table-hover" id="job-templates-table">
          <thead>
            <tr>
              <th>Id</th>
              <th>Name</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% job_templates.forEach(jt => { %>
              <tr>
                <td><%- jt.id %></td>
                <td><a href="/job_template/<%- jt.id %>"><%- jt.name %></a></td>
                <td><a href="/job_template/<%- jt.id %>/promote" class="btn btn-sm btn-success"><i class="fas fa-arrow-alt-circle-up"></i> Promote</a></td>
              </tr>
            <% }) %>
          </tbody>
        </table> <!-- job-templates-table -->
      </div> <!-- /table-responsive-->
    </div> <!-- /main-container -->
  </body>

</html>